<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeManager.RecipePage"
             Title="Recipe Page">

    <StackLayout Padding="20">
        <!-- Numele rețetei -->
        <Editor x:Name="recipeNameEditor"
                Placeholder="Enter the recipe name"
                Text="{Binding Name}"
                HeightRequest="50" />

        <!-- Reminder Time Picker -->
        <Label Text="Set a Reminder Time" />
        <TimePicker x:Name="reminderTimePicker" />

        <!-- Button to Set Reminder -->
        <Button Text="Set Reminder"
                Clicked="OnSetReminderClicked" />

        <!-- Lista de ingrediente -->
        <ListView x:Name="ingredientListView"
                  ItemsSource="{Binding Ingredients}"
                  Margin="0,20,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <!-- Numele ingredientului -->
                            <Label Text="{Binding Ingredient.Name}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="StartAndExpand"
                                   FontSize="18" />

                            <!-- Buton de ștergere ingredient -->
                            <Button Text="Delete"
                                    Clicked="OnDeleteIngredientClicked"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    FontSize="16"
                                    Padding="10"
                                    WidthRequest="80"
                                    HeightRequest="40"
                                    CornerRadius="10"
                                    HorizontalOptions="End" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Buton pentru navigare către IngredientPage -->
        <Button x:Name="addIngredientButton"
                Text="Add Ingredient"
                Clicked="OnAddIngredientClicked" />

        <!-- Descrierea rețetei -->
        <Editor x:Name="descriptionEditor"
                Placeholder="Enter the description of the recipe"
                Text="{Binding Description}"
                HeightRequest="50" />

        <!-- Buton pentru salvarea rețetei -->
        <Button Text="Save Recipe"
                Clicked="OnSaveRecipeClicked" />
    </StackLayout>
</ContentPage>
