<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="RecipeManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RecipeManager"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <!-- Pagina Home -->
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate local:MainPage}" />

        <!-- Pagina About -->
        <ShellContent Title="About"
                      ContentTemplate="{DataTemplate local:AboutPage}" />

        <!-- Pagina Shopping Lists -->
        <ShellContent Title="Shopping Lists"
                      ContentTemplate="{DataTemplate local:ListEntryPage}" />

        <!-- Pagina Recipes -->
        <Tab Title="Recipes"
             Icon="recipes.png">
            <ShellContent ContentTemplate="{DataTemplate local:RecipeListPage}" />
        </Tab>

        <!-- Noua paginÄƒ Ingredients -->
        <Tab Title="Ingredients"
             Icon="ingredients.png">
            <ShellContent ContentTemplate="{DataTemplate local:IngredientPage}" />
        </Tab>

    </TabBar>
</Shell>
